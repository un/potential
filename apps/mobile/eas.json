{
  "cli": {
    "version": ">= 4.1.2",
    "appVersionSource": "remote",
    "requireCommit": true
  },
  "build": {
    "base": {
      "node": "22.14.0",
      "pnpm": "9.15.4",
      "ios": {
        "resourceClass": "m-medium"
      },
      "channel": "base",
      "prebuildCommand": "bash -c 'cd ../.. && pnpm install && pnpm build && cd apps/mobile'"
    },
    "development": {
      "extends": "base",
      "developmentClient": true,
      "distribution": "internal",
      "channel": "development",
      "env": {
        "APP_VARIANT": "development"
      }
    },
    "preview": {
      "extends": "base",
      "distribution": "internal",
      "env": {
        "APP_VARIANT": "development"
      },
      "ios": {
        "simulator": true
      },
      "channel": "preview"
    },
    "prod-dev": {
      "extends": "base",
      "channel": "production",
      "env": {
        "APP_VARIANT": "development"
      }
    },
    "production": {
      "extends": "base",
      "channel": "production"
    }
  },
  "submit": {
    "production": {}
  }
}

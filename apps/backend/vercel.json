{
  "functions": {
    "apps/backend/api/index.ts": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/apps/backend/api/index.ts"
    },
    {
      "source": "/api",
      "destination": "/apps/backend/api/index.ts"
    }
  ],
  "redirects": [
    {
      "source": "/",
      "destination": "/api",
      "permanent": false
    }
  ]
}
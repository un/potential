{
  "extends": "@potential/tsconfig/base.json",
  "compilerOptions": {
    "lib": ["ES2022", "dom", "dom.iterable"],
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "plugins": [{ "name": "next" }],
    "module": "esnext",
    "outDir": "dist",
    "rootDir": "api"
  },
  "include": ["api/**/*", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}

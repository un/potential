{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@potential/tsconfig/base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "noUncheckedIndexedAccess": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "lib": ["ESNext"],
    "moduleResolution": "Bundler",
    "alwaysStrict": true,
    "strict": true,
    "module": "ESNext",
    "target": "ESNext"
  },
  "include": ["api/**/*", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}

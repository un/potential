{
  "name": "@potential/email",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./emails/*": {
      "import": "./dist/emails/*.js",
      "types": "./dist/emails/*.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "esbuild src/index.ts src/emails/*.ts --outdir=dist --platform=node --format=esm --bundle --external:@potential/consts --external:@potential/env --external:@react-email/components --external:dotenv --external:react --external:react-dom --external:resend && tsc -p tsconfig.json --emitDeclarationOnly --declaration --declarationDir dist",
    "dev:package": "email dev --port 3001 --dir ./src/emails",
    "check": "tsc --noEmit"
  },
  "dependencies": {
    "@potential/consts": "workspace:*",
    "@potential/env": "workspace:*",
    "@react-email/components": "^0.0.38",
    "dotenv": "^16.5.0",
    "react": "catalog:react19",
    "react-dom": "catalog:react19",
    "resend": "^4.5.0"
  },
  "devDependencies": {
    "@potential/prettier-config": "workspace:*",
    "@potential/tsconfig": "workspace:*",
    "esbuild": "^0.25.4",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "react-email": "^4.0.11",
    "tsx": "^4.19.4",
    "typescript": "catalog:"
  },
  "prettier": "@potential/prettier-config"
}
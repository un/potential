{
    "name": "@potential/utils",
    "version": "1.0.0",
    "description": "",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "esbuild src/index.ts src/typeid.ts src/uiColors.ts src/ms.ts src/types/*.ts src/convert.ts src/storage.ts --outdir=dist --platform=node --format=esm --bundle --external:@potential/tsconfig --external:convert-units --external:itty-time --external:nanoid --external:typeid-js --external:zod && tsc -p tsconfig.json --emitDeclarationOnly --declaration --declarationDir dist",
        "check": "tsc --noEmit"
    },
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./typeid": {
            "import": "./dist/typeid.js",
            "types": "./dist/typeid.d.ts"
        },
        "./uiColors": {
            "import": "./dist/uiColors.js",
            "types": "./dist/uiColors.d.ts"
        },
        "./ms": {
            "import": "./dist/ms.js",
            "types": "./dist/ms.d.ts"
        },
        "./types/*": {
            "import": "./dist/types/*.js",
            "types": "./dist/types/*.d.ts"
        },
        "./convert": {
            "import": "./dist/convert.js",
            "types": "./dist/convert.d.ts"
        },
        "./storage": {
            "import": "./dist/storage.js",
            "types": "./dist/storage.d.ts"
        }
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "engines": {
        "node": ">=20",
        "pnpm": ">=8"
    },
    "dependencies": {
        "@potential/tsconfig": "workspace:*",
        "convert-units": "3.0.0-beta.7",
        "itty-time": "^2.0.1",
        "nanoid": "^5.1.5",
        "typeid-js": "^1.2.0",
        "zod": "catalog:"
    },
    "devDependencies": {
        "@potential/eslint-config": "workspace:*",
        "esbuild": "^0.25.4"
    }
}